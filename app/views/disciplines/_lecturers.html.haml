%table.table.table-bordered
  - lecturers.in_groups_of(5, false) do |lecturers_row|
    %tr
      - lecturers_row.each do |lecturer|
        %td
          = check_box_tag("discipline[lecturer_ids][]", lecturer.id,
                 discipline.lecturer_ids.include?(lecturer.id))
          = lecturer.fullname
